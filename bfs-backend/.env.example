# .env.example
# Copy to `.env` and fill in real values. This file holds BOTH config & secrets.

DATABASE_URL=postgres://postgres:postgres@localhost:5432/bless2n_food_system?sslmode=disable

# Docker PostgreSQL settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=bless2n_food_system
POSTGRES_PORT=5432

BETTER_AUTH_URL=http://localhost:3000

# Payrexx instance name (your-instance.payrexx.com)
PAYREXX_INSTANCE=your-instance
# Payrexx API secret for request signing (found in Payrexx dashboard)
PAYREXX_API_SECRET=your_api_secret_here
# Payrexx webhook secret for verifying incoming webhooks
PAYREXX_WEBHOOK_SECRET=your_webhook_secret_here

APP_ENV=dev
APP_PORT=8080
PUBLIC_BASE_URL=http://localhost:3000 # Frontend base URL for redirects

LOG_LEVEL=info
LOG_DEVELOPMENT=true

SECURITY_ENABLE_HSTS=false # true for HTTPS connections
SECURITY_ENABLE_CSP=true
SECURITY_TRUSTED_ORIGINS=http://localhost:3000

